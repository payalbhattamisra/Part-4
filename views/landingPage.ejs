    <style>
        /* Typing animation for the heading and paragraphs */
        @keyframes typing {
            from { width: 0; }
            to { width: 100%; }
        }

        /* Apply typing effect without the cursor */
        .typewriter h1 {
            overflow: hidden;
            white-space: nowrap;
            width: 0;
            animation: typing 2s steps(40, end) forwards;
        }

        .typewriter p:first-of-type {
            overflow: hidden;
            white-space: nowrap;
            width: 0;
            animation: typing 2s steps(50, end) forwards;
            animation-delay: 2s; /* Delay for first paragraph to start after heading finishes */
        }

        .typewriter p:last-of-type {
            overflow: hidden;
            white-space: nowrap;
            width: 0;
            animation: typing 2s steps(30, end) forwards;
            animation-delay: 4s; /* Delay for second paragraph to start after first paragraph finishes */
        }

        /* Text reveal animation for About & Features */
        @keyframes fadeInLeft {
            from { opacity: 0; transform: translateX(-50px); }
            to { opacity: 1; transform: translateX(0); }
        }

        .fade-in-left {
            opacity: 0;
            transform: translateX(-50px);
            transition: all 1s ease-in-out;
        }

        .fade-in-left.visible {
            opacity: 1;
            transform: translateX(0);
        }
    </style>
