<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Keyframes for animated gradient */
        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        /* Keyframes for floating text */
        @keyframes floatText {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }

        /* Keyframes for shadow pulsing */
        @keyframes pulseShadow {
            0%, 100% { box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); }
            50% { box-shadow: 0 4px 25px rgba(0, 0, 0, 0.5); }
        }

        /* Animated header */
         

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @keyframes slideInRight {
            from { transform: translateX(100%); }
            to { transform: translateX(0); }
        }
        @keyframes glow {
            0%, 100% { box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); }
            50% { box-shadow: 0 0 20px rgba(99, 102, 241, 0.8); }
        }
        /* Animated text */
        .animated-text {
            animation: floatText 3s ease-in-out infinite;
        }
        .fade-in {
            animation: fadeIn 1s ease-out;
        }
        .slide-in-right {
            animation: slideInRight 1s ease-out;
        }
        .glow {
            animation: glow 2s ease-in-out infinite;
        }
    </style>
</head>
<body class="bg-gray-100 pt-24 font-sans"> 
    <!-- Animated Header -->
    <header class="bg-gradient-to-r from-blue-500 to-purple-600  animated-header shadow-lg fixed w-full top-0 left-0 z-50">
        <div class="container mx-auto flex justify-between items-center p-6">
            <h1 class="text-3xl font-bold text-white animated-text">Profile Information</h1>
        </div>
        <div class="container mx-auto flex flex-col p-6 text-white">
            <div class="flex space-x-4 mt-2">
                <span class="font-semibold animated-text">Manufacture ID: <%= data.local.userID %></span>
            </div>
            <div class="flex space-x-4 mt-2">
                <span class="font-semibold animated-text">Email: <%= data.local.email %></span>
            </div>
        </div>
    </header>

   <!-- Main Content with padding to avoid overlap with sidebar -->
   <div class="flex mt-24"> 
    <main class="flex-1 p-6 pr-80 fade-in">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% for (const product of data.products) { %>
                <a href="/fullorderdetails/<%= product._id %>" class="block transform transition-transform duration-300 hover:scale-105">
                    <div class="border rounded-xl shadow-lg p-6 bg-white hover:bg-gradient-to-r from-blue-50 to-purple-50 hover:border-blue-300 hover:shadow-xl transition hover:shadow-2xl flex flex-col items-start glow">
                        <div class="flex items-center mb-4">
                            <span class="p-2 bg-blue-500 text-white rounded-full shadow-md mr-4">
                                <!-- Icon (replace with SVG as needed) -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-3.866-3.582-7-8-7-1.191 0-2.3.305-3.263.83.211.209.263.517.142.785.278-.105.573-.201.88-.277A4.975 4.975 0 004 6c3.87 0 7 3.134 7 7h1zm6-6h6v6m-1-5v5h5m1 0a4.975 4.975 0 01-.883.277c-.376.092-.781.217-1.188.383-.603.241-1.13.553-1.597.926-.896.71-1.61 1.614-2.098 2.688C14.865 15.79 13.836 17.607 13 19H9c.836-1.393 1.865-3.21 3.26-4.608.735-.736 1.587-1.388 2.532-1.938.796-.46 1.612-.856 2.488-1.168A8.94 8.94 0 0121 12h1" />
                                </svg>
                            </span>
                            <h3 class="text-xl font-semibold text-gray-700">Consumer ID: <%= product.consumerId %></h3>
                        </div>
                        <p class="text-gray-500 text-sm mb-2">Order ID: <%= product._id %></p>
                        <p class="text-gray-500 text-sm">Product Name: <%= product.productName.map(item => item.name).join(', ') %></p>
                    </div>
                </a>
            <% } %>
        </div>
    </main>

        <!-- Sidebar Navigation -->
        <nav class="bg-gray-900 text-white w-64 h-screen py-6 px-4 fixed right-0 slide-in-right">
            <ul class="space-y-6">
                <li>
                    <a href="/registerProductDetails" class="block px-4 py-2 rounded bg-blue-500 hover:bg-blue-600 transition duration-300">
                        Register Product
                    </a>
                </li>
                <li>
                    <a href="/logout" class="block px-4 py-2 rounded bg-red-500 hover:bg-red-600 transition duration-300">
                        Logout
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</body>
</html>
